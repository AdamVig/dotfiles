# https://github.com/nodenv/nodenv-default-packages
# List of npm packages to install by default in any new version of Node installed by Nodenv

# Git diff prettifier
diff-so-fancy

# Emoji search engine
emoj

# JavaScript style linter
eslint

# Baseline ESLint settings
eslint-config-defaults

# run git commands in several repositories at once
git-run

# Task runner
gulp

# update npm
npm

# interactive package updater
npm-check

# process manager
pm2

# Terminal assistant to find and install node packages
emma-cli
