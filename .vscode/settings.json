{
    "editor.fontSize": 12,
    "editor.fontFamily": "Source Code Pro",
    "editor.fontLigatures": true,
    "editor.rulers": [120],
    // Disable minimap
    "editor.minimap.enabled": false,
    // Disable code folding
    "editor.folding": false,
    // Render diffs inline
    "diffEditor.renderSideBySide": false,
    "window.zoomLevel": 0,
    // Git Lens
    "gitlens.blame.line.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "git.enableSmartCommit": true,
    "workbench.startupEditor": "none",

    // Hide panes in Explorer
    "explorer.openEditors.visible": 0,
    "docker.showExplorer": false,
    "gitlens.gitExplorer.enabled": false,
    "markdown.extension.showExplorer": false,

    // Remove leading zero from time
    "clock.dateFormat": "h:MM TT",

    // Fix TypeScript syntax format every time the file is saved
    "tslint.autoFixOnSave": true,

    // Configure HTML formatter:
    // Wrap lines so they're shorter than 120 chars
    "html.format.wrapLineLength": 110,
    // Maintain EOF newline
    "html.format.endWithNewline": true,
    // Do not add extra lines around `head`, `body`, `/html`
    "html.format.extraLiners": "",

    // Change theme
    "workbench.colorTheme": "One Dark Pro",

    "workbench.colorCustomizations": {
      // Change color of bottom bar
      "statusBar.background" : "#1a1d23",
      "statusBar.noFolderBackground" : "#222225",
      "statusBar.debuggingBackground": "#511f1f",
      
      // Darken application frame
      "activityBar.background": "#1a1d23",
      "editor.background": "#222429"
    },

    // Disable file delete confirmation
    "explorer.confirmDelete": false
  }