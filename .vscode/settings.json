{
    "editor.fontSize": 12,
    "editor.fontFamily": "Source Code Pro",
    "editor.fontLigatures": true,
    "editor.rulers": [120],
    "editor.wordWrap": "on",
    // Disable minimap
    "editor.minimap.enabled": false,
    // Disable code folding
    "editor.folding": false,
    // Keep the debug toolbar in its panel
    "debug.toolBarLocation": "docked",
    // Render diffs inline
    "diffEditor.renderSideBySide": false,
    "window.zoomLevel": 0,
    // Git Lens
    "gitlens.statusBar.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "git.enableSmartCommit": true,
    "workbench.startupEditor": "none",

    // Hide panes in Explorer
    "explorer.openEditors.visible": 0,
    "docker.showExplorer": false,
    "gitlens.gitExplorer.enabled": false,
    "markdown.extension.showExplorer": false,

    // Remove leading zero from time
    "clock.dateFormat": "h:MM TT",

    // Configure HTML formatter:
    // Wrap lines so they're shorter than 120 chars
    "html.format.wrapLineLength": 110,
    // Maintain EOF newline
    "html.format.endWithNewline": true,
    // Do not add extra lines around `head`, `body`, `/html`
    "html.format.extraLiners": "",

    // Change theme
    "workbench.colorTheme": "One Dark Pro",

    "workbench.colorCustomizations": {
      // Change color of bottom bar
      "statusBar.background" : "#1a1d23",
      "statusBar.noFolderBackground" : "#222225",
      "statusBar.debuggingBackground": "#511f1f",
      
      // Darken application frame
      "activityBar.background": "#1a1d23",
      "editor.background": "#222429",

      // Highlight active indent guide for the current code block
      "editorIndentGuide.activeBackground": "#ffffff"
    },

    // Hide the feedback smiley in the bar at the bottom
    "workbench.statusBar.feedback.visible": false,

    // Disable file delete confirmation
    "explorer.confirmDelete": false,

    // Increase terminal buffer
    "terminal.integrated.scrollback": 5000,

    // Enable commands like opt+b and opt+f for moving cursor
    "terminal.integrated.macOptionIsMeta": true,

    // Enable Git commit message character counter
    "git.inputValidation": "always",

    // Disable automatic detection of Git submodules
    "git.detectSubmodules": false,

    "shellcheck.customArgs": [
      // Allow 'source' outside of input files
      "-external-sources"
    ],

    // Disable confirmation window on drag and drop in file explorer
    "explorer.confirmDragAndDrop": false,

    // Set path to Python interpreter
    "python.pythonPath": "/usr/local/bin/python3",

    // Periodically run Git Fetch
    "git.autofetch": true,
    
    // Languages to validate with ESLint plugin
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact",
      "vue",
      "vue-html"
    ],
    
    // Do not lint Markdown files
    "stylelint.configOverrides": {
      "ignoreFiles": "*.md"
    },

    "gitlens.keymap": "chorded",
    "gitlens.advanced.messages": {
      "suppressShowKeyBindingsNotice": true
    },
    "gitlens.historyExplorer.enabled": false,

    // Add a ruler at 50 characters (for commit subjects)
    "[git-commit]": {
      "editor.rulers": [
        50,
        72
      ],
      // Wrap at 72 characters instead of 50
      "rewrap.wrappingColumn": 72
    },

    // Enable automatic line wrapping
    "rewrap.autoWrap.enabled": true,

    // Spell checker configuration
    "cSpell.language": "en",
    // Only enable for text-centric language types
    "cSpell.enabledLanguageIds": [
      "markdown",
      "git-commit",
      "latex"
    ],
    // Remove ".git" from the default list of ignored paths
    "cSpell.ignorePaths": [
      "node_modules",        // this will ignore anything the node_modules directory
      "**/node_modules",     // the same for this one
      "**/node_modules/**",  // the same for this one
      "node_modules/**",     // Doesn't currently work due to how the current working directory is determined.
      "vscode-extension",    //
      "*.dll",               // Ignore all .dll files.
      "**/*.dll"             // Ignore all .dll files
    ],

    // Update TypeScript imports when file is moved
    "typescript.updateImportsOnFileMove.enabled": "always",

    // Disable jarring scroll behavior
    "markdown.preview.scrollEditorWithPreview": false,
    "github.hosts": [
      {
        "host": "https://github.com",
        "username": "oauth",
        "token": "system"
      }
    ],
    "breadcrumbs.enabled": true,
    "terminal.integrated.rendererType": "dom",
  }