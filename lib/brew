#!/usr/bin/env bash

_dir="$(dirname "$(realpath "${BASH_SOURCE[0]}")")"

# shellcheck source=./lib/helpers
source "$_dir"/helpers

log() {
	log_with_component brew "$@"
}

# Refresh existing sudo session or start a new one
# shellcheck disable=SC2119
request-sudo

log 'updating Brew package lists...'
brew update >/dev/null

log 'installing Brew formulas...'
if ! brew bundle install --no-lock; then
	warn 'installing Brew formulas may have failed'
fi

log 'brew done.'
