#!/usr/bin/env bash

set -euo pipefail

main() {
  if ! [ -f package.json ]; then
     echo 'error: cannot find package.json'
     exit 1
  fi

  local name
  name="$(jq --raw-output '.name' package.json)"
  local description
  description="$(jq --raw-output '.description' package.json)"

  echo "# $name

$description" > README.md
}
main "$@"
