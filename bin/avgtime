#!/usr/bin/env bash

set -euo pipefail

# Run a given command one hundred times, calculating the average time it takes to complete
# $@: a command and its arguments
sum=0
for _ in {1..100}; do
	set +e
	time="$(/usr/bin/time --quiet --format '%e' "$@" 2>&1 >/dev/null)"
	set -e
	sum="$(bc <<<"scale=3; $sum+$time")"
done
bc <<<"scale=3; $sum/100"
