#!/usr/bin/env bash

set -euo pipefail

DIR="$(dirname "$(realpath "$0")")"

# Initialize a repository that uses npm and git
# $1: directory to create repository in (optional, defaults to current directory)
dir="${1:-}"
if [ -n "$dir" ]; then
  pushd "$dir" > /dev/null
fi

git init
npm init
"$DIR"/gen-npm-readme
"$DIR"/create-npm-repo
git add .
git commit --allow-empty --message 'Initial commit'
